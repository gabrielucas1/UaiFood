{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
  // File Layout
  "outDir": "./dist",    
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["esnext"],
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    // Configurações essenciais para Node.js
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  // ADICIONE estas seções que estão faltando:
  "include": [
    "generated/prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
